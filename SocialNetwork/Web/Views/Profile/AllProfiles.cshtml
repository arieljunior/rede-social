@model IEnumerable<Web.Models.ProfileViewModel>

@{
    ViewBag.Title = "AllProfiles";
}

<h2>Todos Perfis</h2>

@if (Model != null || Model.Count() > 0)
{
    <div class="row">
    @foreach (var p in Model)
    {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@p.UrlPhoto" style="width:200px; height:200px;">
                    <div class="caption">
                        <h3>@p.Name @p.LastName</h3>
                        <p>@p.City</p>
                        <p>@p.Email</p>
                        <p>Seguindo: @p.Following</p>
                        <p>Seguidores: @p.Followers</p>
                        <p>
                            <a href="" class="btn btn-primary" role="button">Ver Perfil</a> 
                            <a href="" class="btn btn-default" role="button">Seguir</a>
                        </p>
                    </div>
                </div>
            </div>
    }
    </div>
}
else
{
    <h2>Nenhum perfil cadastrado :(</h2>
}