@model Web.Models.ProfileViewModel

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="image-perfil">
        <figure>
            <img src="@Model.UrlPhoto" alt="Foto de perfil" />
        </figure>
        <figcaption>@Model.Name @Model.LastName</figcaption>
    </div>
    @using (Html.BeginForm("UploadPhoto", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="data" multiple />
        <button type="submit" class="btn btn-default">Atualizar foto de perfil</button>
    }
</div>
<h3>Seguindo: @Model.Following  Seguidores: @Model.Followers</h3>
<div class="row">
    <div class="col-md-12">
        <h2>Meus Dados</h2>
        <div class="dados">
            <div class="panel panel-default dados-pessoais">
                <div class="panel-heading">Dados Pessoais</div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">Nome: @Model.Name @Model.LastName </li>
                        <li class="list-group-item">Idade: 21</li>
                        <li class="list-group-item">Cidade: @Model.City</li>
                        <li class="list-group-item">Email: @Model.Email</li>
                    </ul>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Atualizar dados do perfil</div>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "Profile"))
                    {
                        <div class="form-group">
                            <input type="hidden" id="Followers" name="Followers" value="@Model.Followers" />
                            <input type="hidden" id="Following" name="Following" value="@Model.Following" />
                            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required/>
                            <input type="text" id="LastName" name="LastName" class="form-control" value="@Model.LastName" required />
                            <input type="text" id="City" name="City" value="@Model.City" class="form-control" />
                            <input type="url" id="UrlPhoto" name="UrlPhoto" value="@Model.UrlPhoto" class="form-control" />
                        </div>
                       <button type="submit" class="btn btn-success">Atualizar</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

