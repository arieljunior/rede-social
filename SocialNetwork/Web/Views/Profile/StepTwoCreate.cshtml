@model Web.Models.ProfileViewModel

@{
    ViewBag.Title = "StepTwoCreate";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("StepTwoCreate", "Profile", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-signin mg-btm" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="heading-desc">
                Registrar no LeagueBook
            </h3>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="main">

                <input type="text" class="form-control" name="Name" placeholder="Nome" autofocus>
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                <input type="text" class="form-control" name="LastName" placeholder="Sobrenome">
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                <input type="text" class="form-control" name="City" placeholder="Estado" />
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                <label for='img' class="btn btn-default">Selecione uma foto &#187;</label>
                <input style="display:none" type="file" id="img" name="img" class="form-control" accept="image/*" />

                <span class="clearfix"></span>
            </div>
            <div class="login-footer">
                <div class="row">
                    <div class="col-xs-6 col-md-6 pull-right">
                        <button type="submit" class="btn btn-large btn-success pull-right">Continuar</button>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
